<ul>
  {{#each burger}}
  <li>
    <p>
      {{this.id}}. {{this.burger_name}}
      <button data-planid="{{this.id}}" class="delplan">Devour it!</button>
    </p>
  </li>
  {{/each}}
</ul>

<h2>Eat-Dat-Burger</h2>
<form id="createplan" class="button-size">
  <textarea type="text" name="plan"></textarea>
  <button type="submit">Submit</button>
</form>
<h3>Enter a burger you want to east Click the "Submit" button.</h3>

<script type="text/javascript">
  $(".delplan").on("click", function(event) {
    // Get the ID from the button.
    // This is shorthand for $(this).attr("data-planid")
    var id = $(this).data("planid");

    // Send the DELETE request.
    $.ajax("/api/plans/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });

  $("#createplan").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    // [name=plan] will find an element with a "name" attribute equal to the string "plan"
    var newPlan = {
      burger_name: $("#createplan [name=plan]").val().trim()
    };

    // Send the POST request.
    $.ajax("/api/burgers", {
      type: "POST",
      data: newPlan
    }).then(
      function() {
        console.log("Burger Name:");
        // Reload the page to get the updated list
        location.reload();
      }
    );
  });
</script>
